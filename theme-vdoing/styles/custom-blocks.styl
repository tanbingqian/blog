.custom-block
  .custom-block-title
    font-weight 600
    margin-bottom .2rem
  p
    margin 0
  &.tip, &.warning, &.danger
    padding .5rem 1.5rem
    border-left-width .5rem
    border-left-style solid
    margin 1rem 0
  &.tip
    background-color #f3f5f7
    border-color #42b983
    color darken(#42b983, 50%)
  &.warning
    background-color #FFF7D0
    border-color darken(#ffe564, 35%)
    color darken(#ffe564, 70%)
    .custom-block-title
      color darken(#ffe564, 50%)
    a
      color var(--textColor)
  &.danger
    background-color #ffe6e6
    border-color darken(red, 20%)
    color darken(red, 70%)
    .custom-block-title
      color darken(red, 40%)
    a
      color var(--textColor)


